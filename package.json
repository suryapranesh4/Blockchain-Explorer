{
  "name": "blockchain-explorer-backend",
  "version": "1.0.0",
  "description": "Flash Blockchain Explorer",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "hardhat-install": "cd hardhat-ethereum && npm install",
    "start": "node server.js",
    "server": "nodemon server.js --exec babel-node --presets babel-preset-env",
    "client": "cd client && npm start",
    "hardhat": "cd hardhat-ethereum && npx hardhat node",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run hardhat\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd hardhat-ethereum && npm install && cd .. && cd client && npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "hardhat": "^2.12.3",
    "nodemon": "^2.0.20",
    "morgan": "^1.9.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^5.8.13",
    "web3": "^1.8.1"
  }
}
